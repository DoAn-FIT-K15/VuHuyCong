@model IEnumerable<WebThoiTrang.Models.EF.ReviewProduct>

    <div class="flex-w flex-t p-b-68">

        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {


                <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                    @if (item.Avatar != null)
                    {
                        <img src="@item.Avatar" alt="avatar">
                    }
                    else
                    {
                        <img src="~/Content/assets/images/icons/userReview.png" alt="avatar">
                    }
                </div>

                <div class="size-207">
                    <div class="flex-w flex-sb-m p-b-17">
                        <span class="mtext-107 cl2 p-r-20">
                            @item.FullName
                        </span>

                        <span class="fs-18 cl11">
                            @Html.Raw(WebThoiTrang.Common.Common.HtmlRate(item.Rate))
                        </span>
                    </div>
                    <p class="mtext-101 cl2 p-r-20">
                        @item.CreateDate
                    </p>
                    <p class="stext-102 cl6">
                        @item.Content
                    </p>
                </div>
            }

        }

    </div>
