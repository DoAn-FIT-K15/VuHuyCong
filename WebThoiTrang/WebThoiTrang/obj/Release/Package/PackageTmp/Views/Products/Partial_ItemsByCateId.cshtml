@model IEnumerable<WebThoiTrang.Models.EF.Product>
@if (Model != null)
{
    <section class="sec-relate-product bg0 p-t-45 p-b-105">
        <div class="container">
            <div class="p-b-45">
                <h3 class="ltext-106 cl5 txt-center">
                    Related Products
                </h3>
            </div>
            <div class="wrap-slick2">
                <div class="slick2">
                    @foreach (var item in Model)
                    {
                        var strImge = "";
                        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                        if (img != null)
                        {
                            strImge = img.Image;
                        }
                        if (item.IsActive)
                        {
                            <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                <div class="block2">
                                    <div class="block2-pic hov-img0">
                                        <img src="@strImge" alt="IMG-PRODUCT">
                                    </div>

                                    <div class="block2-txt flex-w flex-t p-t-14">
                                        <div class="block2-txt-child1 flex-col-l ">
                                            <a href="/chi-tiet/@item.Alias-p@(item.Id)" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                @item.Title
                                            </a>

                                            <span class="stext-105 cl3">
                                                @WebThoiTrang.Common.Common.FormatNumber(item.Price, 0) đồng
                                            </span>
                                        </div>

                                        <div class="block2-txt-child2 flex-r p-t-3">
                                            <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                                <img class="icon-heart1 dis-block trans-04" src="~/Content/assets/images/icons/icon-heart-01.png" alt="ICON">
                                                <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Content/assets/images/icons/icon-heart-02.png" alt="ICON">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
        </div>
    </section>
}
