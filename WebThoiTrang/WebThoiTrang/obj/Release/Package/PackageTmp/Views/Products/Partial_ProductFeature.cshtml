@model IEnumerable<WebThoiTrang.Models.EF.Product>
<div class="p-t-65">
    <h4 class="mtext-112 cl2 p-b-33">
        Sản phẩm nổi bật
    </h4>

    <ul>
        @foreach (var item in Model)
        {
            var strImge = "";
            var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
            if (img != null)
            {
                strImge = img.Image;
            }
            <li class="flex-w flex-t p-b-30">
                <a href="/chi-tiet/@item.Alias-p@(item.Id)" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">
                    <img width="90px" src="@strImge" alt="PRODUCT">
                </a>

                <div class="size-215 flex-col-t p-t-8">
                    <a href="/chi-tiet/@item.Alias-p@(item.Id)" class="stext-116 cl8 hov-cl1 trans-04">
                       @item.Title
                    </a>

                    <span class="stext-116 cl6 p-t-20">
                        @WebThoiTrang.Common.Common.FormatNumber(@item.Price, 0) đồng
                    </span>
                </div>
            </li>
        }
    </ul>
</div>
