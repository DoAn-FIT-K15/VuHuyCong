@model WebThoiTrang.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}
<style>
    .container{
        background: none;
    }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css">

<link href="~/Content/assets/css/style.css" rel='stylesheet' type='text/css' media="all">
<!--//style sheet end here-->
@*<link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">*@
<div class="container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="popup">
            <!--login form-->
            <div class="letter-w3ls">
                <form action="#" method="post">
                    <div class="form-left-to-w3l">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "UserName", required = "" })
                    </div>
                    <div class="form-left-to-w3l">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "" })
                    </div>
                    @*<div class="form-left-to-w3l">
                <input type="text" name="name" placeholder="Phone" required="">
            </div>
            <div class="form-left-to-w3l">
                <input type="email" name="email" placeholder="Email" required="">
            </div>*@
                    <div class="form-left-to-w3l">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "" })


                    </div>
                    <div class="form-left-to-w3l margin-zero">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password", required = "" })

                    </div>
                    <div class="btnn">
                        <button type="submit">Sign Up</button>
                        <br>
                    </div>
                </form> 
                <div class="clear"></div>
                <hr />
                <div>
                    <h3>
                        Have an account..?||
                        @Html.ActionLink("Đăng nhập", "Login")
                    </h3>
                </div>

            </div>
            <!--//login form-->
            <a class="close" href="#">&times;</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
