@model WebThoiTrang.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile User";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">*@
<style>
    .news_section_container {
        margin-top: 90px;
        margin-bottom: 180px;
        margin-left:100px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <h3 class="row">Thông tin cá nhân</h3>
    <br />
    @using (Html.BeginForm("PostProfile", "Account"))
    {
        @Html.ValidationSummary(false)
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label for="exampleInputEmail1">Họ tên</label>
            <input class="form-control" aria-describedby="emailHelp" placeholder="Full Name" name="FullName" value="@Model.FullName">

        </div>
        <div class="form-group row">
            <label for="exampleInputEmail1">Tài khoản</label>
            <input class="form-control" aria-describedby="emailHelp" placeholder="User Name" name="UserName" value="@Model.UserName" >

        </div>

        <div class="form-group row">
            <label for="exampleInputEmail1">Số điện thoại</label>
            <input class="form-control" aria-describedby="emailHelp" placeholder="Phone" name="Phone" value="@Model.Phone">

        </div>
        <div class="form-group row">
            <label for="exampleInputEmail1">Email</label>
            <input class="form-control" aria-describedby="emailHelp" placeholder="Mail" name="Email" value="@Model.Email" readonly>

        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    }

</div>
