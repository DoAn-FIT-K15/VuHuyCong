<div class="col-sm-6 col-lg-3 p-b-50">
    <h4 class="stext-301 cl0 p-b-30">
        Danh mục sản phẩm
    </h4>

    <ul>
        @foreach (var category in ViewBag.ProductCategories)
        {
            <li class="p-b-10">
                <a href="/danh-muc-san-pham/@category.Alias-@category.Id" class="stext-107 cl7 hov-cl1 trans-04">
                    @category.Title
                </a>
            </li>
        }
    </ul>
</div>
