<script>
    document.getElementById('sale').addEventListener('click', function () {
        showTabContent('saleitem');
    });

    document.getElementById('hot').addEventListener('click', function () {
        showTabContent('hotitem');
    });

    document.getElementById('feature').addEventListener('click', function () {
        showTabContent('featureitem');
    });

    function showTabContent(tabId) {
        // Lấy tất cả các tab contents
        var tabContents = document.querySelectorAll('.tab-pane');

        // Đặt class 'show active' cho tab content được chọn và loại bỏ khỏi các tab content còn lại
        tabContents.forEach(function (tab) {
            if (tab.id === tabId) {
                tab.classList.add('show');
                tab.classList.add('active');
            } else {
                tab.classList.remove('show');
                tab.classList.remove('active');
            }
        });
    }
</script>