@model IEnumerable<WebThoiTrang.Models.EF.ProductCategory>
@if (Model != null && Model.Any())
{
<div class="sec-banner bg0">
    <div class="flex-w flex-c-m">

        @foreach (var item in Model)
        {
            <div class="size-202 m-lr-auto respon4">
                <!-- Block1 -->
                <div class="block1 wrap-pic-w">
                    <img src="@item.Icon" alt="IMG-BANNER">

                    <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-105 trans-04 p-b-8">
                                @item.Title
                            </span>
                            <span class="block1-info stext-103 trans-04">
                                Summer Collection
                            </span>
                        </div>
                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link ltext-101 cl0 trans-09">
                                Shop Now
                            </div>
                        </div>
                    </a>
                </div>
            </div>
         }
           
    </div>
</div>
}
