@model WebThoiTrang.Models.EF.Subscribe

<div class="col-sm-6 col-lg-3 p-b-50">
    <h4 class="stext-301 cl0 p-b-30">
        Newsletter
    </h4>
    @using (Ajax.BeginForm("Subscribe", "Home", new AjaxOptions
    {
        OnBegin = "OnBeginSub",
        OnSuccess = "OnSuccessSub",
        OnFailure = "OnFailureSub"
    }))
    {
        @Html.AntiForgeryToken()
        <script>
            function OnBeginSub() {

            }
            function OnSuccessSub(rs) {
                if (rs.Success) {
                    alert("Đăng ký thành công");
                }
            }
            function OnFailureSub(rs) { }
        </script>
        <form>

            <div class="wrap-input1 w-full p-b-4">
                <input id="newsletter_email" class="input1 bg-none plh1 stext-107 cl7" type="text" required="required" name="email" placeholder="email@example.com">
                <div class="focus-input1 trans-04"></div>
            </div>

            <div class="p-t-18">
                <button id="newsletter_submit" class="flex-c-m stext-101 cl0 size-103 bg1 bor1 hov-btn2 p-lr-15 trans-04">
                    Subscribe
                </button>
            </div>
        </form>
    }

</div>
